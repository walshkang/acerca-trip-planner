{
  "states": {
    "idle": {
      "type": "container",
      "style": { "padding": 16, "alignment": "start" },
      "children": [
        { "type": "text", "content": "Dev Progress Tracker (generated from roadmap.json)", "style": { "fontSize": 18 } },
        { "type": "text", "content": "Active Phase: {{active_phase_label}}", "style": { "padding": 8 } },
        { "type": "text", "content": "Active Epic: {{active_epic_label}}", "style": { "padding": 8 } },
        { "type": "text", "content": "Task statuses use: completed | in_progress | planned", "style": { "padding": 8 } },
        {
          "type": "container",
          "style": { "padding": 12, "alignment": "start" },
          "children": [
            { "type": "text", "content": "Gates", "style": { "fontSize": 14, "padding": 4 } },
            { "type": "text", "content": "• Phase status correctness (prevents phase_1 fallback)", "style": { "padding": 2 } },
            { "type": "text", "content": "• E2E strategy chosen (restore seeding or keep E2E paused)", "style": { "padding": 2 } },
