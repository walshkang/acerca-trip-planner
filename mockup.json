    "success": {
      "type": "container",
      "style": { "padding": 16, "alignment": "center" },
      "children": [
        { "type": "text", "content": "Context refresh complete", "style": { "fontSize": 16 } }
      ]
    },
    "error": {
      "type": "container",
      "style": { "padding": 16, "alignment": "center" },
      "children": [
        { "type": "text", "content": "Context refresh failed; check generator logs", "style": { "fontSize": 16 } }
      ]
    }
  }
